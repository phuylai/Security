<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="@dimen/five_dp"
    card_view:cardCornerRadius="@dimen/five_dp"
    card_view:cardElevation="@dimen/five_dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/ten_dp"
    card_view:cardBackgroundColor="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/five_dp">

        <ImageView
            android:id="@+id/iv_mode"
            android:layout_width="@dimen/mode_size"
            android:layout_height="@dimen/mode_size"
            android:layout_centerVertical="true"
            android:src="@drawable/peace"
            />
        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_mode"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/ten_dp"
            style="@style/mode_style"
            android:layout_marginBottom="@dimen/ten_dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>